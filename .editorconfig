# Archivo .editorconfig
root = true

# Configuración para todos los archivos
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Configuración específica para archivos JavaScript
[*.js]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = true